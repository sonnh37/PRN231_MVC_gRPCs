@model IEnumerable<KoiOrderingSystem.APIService.Grpcs.TravelRequest>

@{
    ViewBag.Title = "Travel List";
}

<h2>Travel List</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Travel</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Price</th>
            <th>Note</th>
            <th>Actions</th> <!-- New column for action buttons -->
        </tr>
    </thead>
    <tbody>
        @foreach (var travel in Model)
        {
            <tr>
                <td>@travel.Id</td>
                <td>@travel.Name</td>
                <td>@travel.Location</td>
                <td>@travel.Price</td>
                <td>@travel.Note</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@travel.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@travel.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@travel.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
